# Multi-LLM Query Processing System - Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================================================
# Database Configuration
# ============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=multi_llm_system
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_SSL=false

# ============================================================================
# n8n Configuration
# ============================================================================
N8N_HOST=https://your-n8n-instance.com
N8N_WEBHOOK_BASE_URL=https://your-n8n-instance.com/webhook

# ============================================================================
# AWS S3 Storage
# ============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name
S3_BASE_URL=https://your-bucket-name.s3.amazonaws.com

# ============================================================================
# LLM API Keys
# ============================================================================

# OpenAI (ChatGPT)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4096

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
ANTHROPIC_MODEL=claude-sonnet-4-5
ANTHROPIC_MAX_TOKENS=4096

# X.AI (Grok)
XAI_API_KEY=your-grok-api-key
XAI_API_URL=https://api.x.ai/v1/chat/completions
GROK_MODEL=grok-4.0

# Google (Gemini)
GOOGLE_API_KEY=your-google-api-key
GOOGLE_API_URL=https://generativelanguage.googleapis.com/v1
GEMINI_MODEL=gemini-2.5-pro

# OpenRouter (Alternative - for unified LLM access)
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_API_URL=https://openrouter.ai/api/v1/chat/completions
OPENROUTER_SITE_URL=https://yoursite.com
OPENROUTER_APP_NAME=Multi-LLM Query System

# ============================================================================
# Parallel Web Systems Task Core (Moderator 2)
# ============================================================================
PWST_CORE_API_URL=https://api.parallelwebsystems.com/v1/verify
PWST_CORE_API_KEY=your-pwst-core-api-key

# ============================================================================
# Document Conversion Service
# ============================================================================
CONVERTAPI_SECRET=your-convertapi-secret
CONVERTAPI_URL=https://api.convertapi.com/v2

# Alternative: Use local conversion tools
# PANDOC_PATH=/usr/bin/pandoc
# LIBREOFFICE_PATH=/usr/bin/libreoffice

# ============================================================================
# Email Configuration (SMTP)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourplatform.com
EMAIL_FROM_NAME=Multi-LLM Query System

# ============================================================================
# Payment Processing
# ============================================================================

# Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# PayPal (Optional)
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox  # or 'live' for production

# ============================================================================
# Application Configuration
# ============================================================================

# General
APP_NAME=Multi-LLM Query System
APP_URL=https://yourapp.com
APP_ENV=development  # or 'production'
APP_DEBUG=true

# Security
JWT_SECRET=your-jwt-secret-key-here
SESSION_SECRET=your-session-secret-key-here
ENCRYPTION_KEY=your-encryption-key-32-chars

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# Query Processing Configuration
# ============================================================================

# Pricing
QUERY_BASE_COST=2.00
CHATGPT_COST_PER_CALL=0.03
CLAUDE_COST_PER_CALL=0.03
GROK_COST_PER_CALL=0.03
GEMINI_COST_PER_CALL=0.03
CONSOLIDATION_COST=0.05
VERIFICATION_COST=0.05
FINAL_DELIVERABLE_COST=0.05

# Balance Thresholds
LOW_BALANCE_THRESHOLD=2.00
MINIMUM_DEPOSIT=20.00
TRIAL_BALANCE=20.00

# Feature Flags
ENABLE_CHATGPT=true
ENABLE_CLAUDE=true
ENABLE_GROK=true
ENABLE_GEMINI=true
ENABLE_TRIAL_ACCOUNTS=true

# Query Settings
MAX_QUERY_LENGTH=10000
MAX_ATTACHMENT_SIZE_MB=10
ALLOWED_ATTACHMENT_TYPES=pdf,doc,docx,txt,jpg,jpeg,png

# Timeout Settings (in milliseconds)
LLM_REQUEST_TIMEOUT=60000
STORAGE_UPLOAD_TIMEOUT=30000
EMAIL_SEND_TIMEOUT=10000

# ============================================================================
# RAG (Memory) Configuration
# ============================================================================
RAG_SIMILARITY_THRESHOLD=0.7
RAG_MAX_CONTEXT_QUERIES=10
RAG_ENABLE_SEMANTIC_SEARCH=true

# Vector Database (if using)
# PINECONE_API_KEY=your-pinecone-api-key
# PINECONE_ENVIRONMENT=us-west1-gcp
# PINECONE_INDEX=multi-llm-memory

# ============================================================================
# Logging and Monitoring
# ============================================================================
LOG_LEVEL=info  # debug, info, warn, error
LOG_FILE_PATH=./logs/app.log
LOG_MAX_FILES=30
LOG_MAX_SIZE=10m

# Sentry (Error Tracking)
# SENTRY_DSN=your-sentry-dsn

# Analytics
# GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
# MIXPANEL_TOKEN=your-mixpanel-token

# ============================================================================
# Admin Panel
# ============================================================================
ADMIN_EMAIL=admin@yourplatform.com
ADMIN_USERNAME=admin
ADMIN_DEFAULT_PASSWORD=change-this-password

# ============================================================================
# Frontend Configuration
# ============================================================================
FRONTEND_URL=https://yourfrontend.com
CORS_ORIGIN=https://yourfrontend.com
ALLOWED_ORIGINS=https://yourfrontend.com,http://localhost:3000

# ============================================================================
# Backup Configuration
# ============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# ============================================================================
# Cache Configuration (Redis)
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
CACHE_TTL=3600  # 1 hour in seconds

# ============================================================================
# Webhook Security
# ============================================================================
WEBHOOK_SECRET=your-webhook-secret-key
WEBHOOK_SIGNATURE_HEADER=X-Webhook-Signature

# ============================================================================
# File Retention Policy
# ============================================================================
QUERY_RETENTION_DAYS=365
DELETE_OLD_QUERIES=true
ARCHIVE_OLD_QUERIES=true
ARCHIVE_AFTER_DAYS=90

# ============================================================================
# Development/Testing
# ============================================================================
MOCK_LLM_RESPONSES=false
MOCK_PAYMENT_PROCESSING=false
SKIP_EMAIL_SENDING=false

# Test Credentials
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=test-password

# ============================================================================
# Notes
# ============================================================================
# 1. Never commit the actual .env file to version control
# 2. Use strong, unique passwords and API keys
# 3. Rotate API keys regularly
# 4. Keep production and development environments separate
# 5. Enable SSL/TLS for all production services
# 6. Use environment-specific configurations
